---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
const { banner } = Astro.props;
const { title, image, content } = banner;
import Search from "./Search.astro";
---

<section class="section banner relative">
  <div class="container">
    <div class="row items-center gap-8 lg:gap-0">
      <div class="lg:col-6">
        <h1 class="banner-title" set:html={markdownify(title)} />
        <p class="mt-6 mb-4" set:html={markdownify(content)} />
        <Search />
      </div>
      <div class="lg:col-6">
        <Image
          class="w-full object-contain rounded-md"
          alt="banner"
          src={image}
          width={603}
          height={396}
        />
      </div>
    </div>
  </div>

  <Image
    class="banner-shape absolute -top-28 right-0 -z-[1] w-full max-w-[30%]"
    alt="banner"
    src="/images/banner-shape.png"
    width={496}
    height={466}
  />
</section>
